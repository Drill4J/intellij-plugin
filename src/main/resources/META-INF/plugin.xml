<idea-plugin>
    <id>com.github.evgeniikuznetsov.drill4jplugin</id>
    <name>Drill-Plugin</name>
    <vendor>evgeniikuznetsov</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="com.github.evgeniikuznetsov.drill4jplugin.actions.FileRetrieveAction" class="com.github.evgeniikuznetsov.drill4jplugin.actions.FileRetrieveAction"
                text="Show Drill Coverage" description="Show drill coverage">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt K"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable parentId="other" instance="com.github.evgeniikuznetsov.drill4jplugin.config.SettingsConfigurable"
                             id="org.intellij.sdk.settings.AppSettingsConfigurable"
                             displayName="Drill4j settings"/>
        <applicationService serviceImplementation="com.github.evgeniikuznetsov.drill4jplugin.config.SettingsState"/>
    </extensions>
</idea-plugin>
