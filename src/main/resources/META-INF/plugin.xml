<idea-plugin>
    <id>com.epam.drill.idea.plugin</id>
    <name>Drill4j</name>
    <vendor>evgeniikuznetsov</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="FileRetrieveAction"
                class="com.epam.drill.idea.plugin.actions.FileRetrieveAction"
                text="Show Drill Coverage" description="Show drill coverage by settings">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt K"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <!--        todo maybe changed parentId for setting?-->
        <!--        parentId="tools"-->
        <projectConfigurable parentId="other"
                             instance="com.epam.drill.idea.plugin.config.SettingsConfigurable"
                             id="com.drill.AppSettingsConfigurable"
                             displayName="Drill4j Settings"/>
        <applicationService serviceImplementation="com.epam.drill.idea.plugin.config.SettingsState"/>
    </extensions>
</idea-plugin>
