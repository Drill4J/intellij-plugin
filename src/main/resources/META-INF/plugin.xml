<idea-plugin>
    <id>com.github.evgeniikuznetsov.drill4jplugin</id>
    <name>Drill-Plugin</name>
    <vendor>evgeniikuznetsov</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="Sender.SendCurrentFileAction" class="com.github.evgeniikuznetsov.drill4jplugin.actions.FileRetrieveAction"
                text="Send JSP to ENV Server" description="Send current JSP file to environment server"
                icon="Icons.icon16">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <action id="com.github.evgeniikuznetsov.drill4jplugin.actions.FileRetrieveAction" class="com.github.evgeniikuznetsov.drill4jplugin.actions.FileRetrieveAction"
                text="Download and Open JaCoCo File" description="Send multiple jsp files">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt K"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable parentId="other" instance="com.github.evgeniikuznetsov.drill4jplugin.config.SettingsConfigurable"
                             id="org.intellij.sdk.settings.AppSettingsConfigurable"
                             displayName="JSP Reactive Settings"/>
        <applicationService serviceImplementation="com.github.evgeniikuznetsov.drill4jplugin.config.SettingsState"/>
    </extensions>
</idea-plugin>
